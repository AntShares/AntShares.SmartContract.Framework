<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Neo.SmartContract.Framework\Neo.SmartContract.Framework.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Message Text="Start NeoContract converter, Source File: $(TargetPath) from $(SolutionDir) and Configuration $(ConfigurationName)" Importance="high">
    </Message>
    <Exec Command="dotnet $(SolutionDir)src/Neo.Compiler.MSIL/bin/$(ConfigurationName)/netcoreapp3.1/neon.dll -f &quot;$(TargetPath)&quot; -o" />
  </Target>
  
</Project>
